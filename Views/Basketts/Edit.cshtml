@model ShopWebApplication1.Models.Baskett

@{
    ViewData["Title"] = "Кількість";
}

<h2>Редагування кількості товару</h2>

<h4>
    <p>
        <i>@Html.DisplayFor(model => model.Goods.Name)</i>
    </p>
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GoodsId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <b>
                    <label asp-for="Quantity" class="control-label">Кількість</label>
                </b>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <p>
                <div class="form-group">
                    <input type="submit" value="Змінити" class="btn btn-primary" /> |
                    <a asp-action="Index">Повернутися до списку</a>
                </div>
            </p>
        </form>
    </div>
</div>
<br>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
