@model ShopWebApplication1.Models.ViewModels.ViewProfile
@using ShopWebApplication1.Data


@{
    ViewData["Title"] = "Профіль";
    var CUser = new UserCheck();
    bool IsCurUserBaskettFill = CUser.IsCurUserBaskettFill();
}

<h2>Реквізити отримувача</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Profile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b>
                    <label asp-for="Name" class="control-label">Ім'я</label>
                 </b>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>
                    <label asp-for="Patronymic" class="control-label">По батькові</label>
                </b>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>
                    <label asp-for="Surname" class="control-label">Прізвище</label>
                </b>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>
                    <label asp-for="Address" class="control-label">Адреса</label>
                </b>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>
                    <label asp-for="PhoneNumber" class="control-label">Телефон</label>
                </b>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Підтвердити реквізити" class="btn btn-primary" />
            </div>
            <br>
            @if (IsCurUserBaskettFill && ViewBag.EnableMakeOrderBtn)
            {
                <div class="form-group">
                    <a class="btn btn-success" asp-area="" asp-action="GotoMakeNewOrder">Оформити замовлення</a>
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
